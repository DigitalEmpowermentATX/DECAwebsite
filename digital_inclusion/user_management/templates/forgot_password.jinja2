{% extends 'base.jinja2' %}
{% load widget_tweaks %}
{% load crispy_forms_tags %}
{% block title %}DECA - Login{% endblock %}

{% block content %}
<div class="container p-4">
  <h2>Password reset request</h2>
  <form method="post">
    {% csrf_token %}
    {{form | crispy}}
    <button type="submit" class="btn btn-primary">Reset password</button>    
  </form>
</div>
{% endblock %}